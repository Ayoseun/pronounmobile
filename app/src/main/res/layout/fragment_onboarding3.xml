<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Onboarding.Onboarding3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"


        android:background="#002C9D65"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical"
        android:weightSum="4">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_weight="0.01"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:shadowColor="#8A8A8A"
            android:shadowRadius="15"
            android:shadowDy="4"
            android:shadowDx="7"
            android:textColor="@color/colornewAccent"
            android:text="Hurray , Musa you just completed part  A of this course past question"
            android:textAlignment="center"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:layout_marginHorizontal="33dp"
            android:src="@drawable/asses" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.001"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="70 / 70 \npoints"
            android:shadowColor="#8A8A8A"
            android:shadowRadius="15"
            android:shadowDy="4"
            android:shadowDx="7"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/butf"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="0.04"

        android:layout_marginBottom="175dp"
        android:layout_gravity="center_horizontal"
        android:background="#00009106"

        android:text="Real time questions evaluation"

        android:textColor="@color/colorAccent"
        android:textSize="23sp"
        />
</LinearLayout>