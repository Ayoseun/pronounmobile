<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:isScrollContainer="false"
    android:orientation="vertical"
    tools:context=".UserData.login">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="45dp"

        android:background="@drawable/shape4"
        android:drawableStart="@drawable/ic_baseline_person_pin_24"
        android:drawablePadding="10dp"
        android:hint="email"
        android:paddingStart="10dp"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#CEA6B8AF"
        android:textCursorDrawable="@null"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.361" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        app:counterEnabled="true"
        app:counterMaxLength="6"
        android:layout_marginTop="@dimen/_25sdp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email_login"
        app:layout_constraintTop_toBottomOf="@+id/email_login">

        <EditText
            android:id="@+id/passwrdlogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="35dp"
            android:background="@drawable/shape4"

            android:drawableStart="@drawable/ic_baseline_vpn_key_24"

            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="10dp"
            android:hint="Password"

            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="@dimen/_12sdp"
            android:textColor="#000000"
            android:textColorHint="#CEA6B8AF"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/butLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="65dp"

        android:layout_marginTop="32dp"
        android:background="@drawable/shape3"
        android:padding="1dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="@color/tint"
        app:layout_constraintEnd_toEndOf="@+id/butLogin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/butLogin"
        app:layout_constraintTop_toBottomOf="@+id/butLogin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#63424E59"
        android:elevation="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00526474"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"

            app:cardCornerRadius="100dp"
            app:cardElevation="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                android:layout_height="50dp"

                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loads"
                app:lottie_repeatCount="55"
                app:lottie_scale="0.45" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>