<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Onboarding.Onboarding1">


    <ImageButton
        android:id="@+id/prn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:background="#0003DAC5"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/prm2021"
        android:text="Pronoun"
        android:textColor="@color/colornewAccent"
        android:textSize="43sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.01"
        android:padding="15dp"
        android:shadowColor="#F3F3F3"
        android:shadowDx="7"
        android:shadowDy="4"
        android:shadowRadius="15"
        android:text="              Study Pack              \nin Semester Mode"
        android:textAlignment="center"
        android:textColor="@color/colornewAccent"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/study2"
        app:layout_constraintVertical_bias="0.94" />


    <ImageView
        android:id="@+id/study2"
        android:layout_width="353dp"
        android:layout_height="406dp"
        android:padding="95dp"
        android:paddingEnd="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/studykit2021"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="15dp"
        android:shadowColor="#54BCEABE"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:text=" Amazing Initiative Study kit"
        android:textAlignment="center"

        android:textColor="#8C9892"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>